<!-- Navbar -->
<!-- Full Nav Overlay -->
<div class="overlay overlay-fullscreen">
  <button type="button" class="overlay-close" toggle-nav on-keyup="">Close</button>
  <nav>
    <h1 class="logo-fontface" id="menu-logo">OpinioNation</h1>
    <ul>
      <li><%= link_to "Questions", root_path %></li>
      <% if current_user %>
      <li><%= link_to "Your Profile", user_path(current_user.username) %></li>
      <li><%= link_to "Sign Out", session_path, method: :delete, id: "signzout" %></li>
      <% else %>
      <li><%= link_to "Login", new_session_path %></li>
      <li><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
    </ul>
  </nav>
</div>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button id="trigger-overlay" toggle-nav type="button" class="navbar-toggle collapsed" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="<%= new_post_path %>" id="newz" type="button" class="trigger-add-post navbar-toggle collapsed" data-target="#bs-example-navbar-collapse-1">
        <span id="plus-sign-glyph"></span>
      </a>
      <ul class="nav-right nav navbar-nav">
        <% if current_user %>
          <li class="nav-link"><a><%= "Hello, #{current_user.fname}!" %></a></li>
          <li class="nav-link"><%= link_to "Sign Out", session_path, method: :delete, id: "signzout" %></li>
        <% else %>
        <li class="nav-link"><%= link_to "Login", new_session_path %></li>
        <li class="nav-link"><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
      <%= link_to "OpinioNation", root_path, class: "navbar-brand logo-fontface" %>
    </div>

  </div><!-- /.container-fluid -->
</nav>