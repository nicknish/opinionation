<!-- User Profile -->
<div class="user-profile" data-ng-controller="UserProfileCtrl">
  <!-- Pull from API -->
  <div class="container">
    <div class="imageWrapper">
      <%= image_tag (current_user.profile_pic(:medium)), class: "img-circle user-profile-pic" %>
    </div>
    <h2 class="user-profile-username"><%= current_user.username %></h2>
  </div>

  <!-- Profile Tabs -->
  <div class="profile-tabs clearfix">
    <button class="profile-tab question-tab"><span id="question-icon" ng-click="changeProfileTab('questions')"></span></button>
    <button class="profile-tab answer-tab"><span id="answer-icon" ng-click="changeProfileTab('answers')"></span></button>
    <button class="profile-tab favorite-tab"><span id="favorite-icon" ng-click="changeProfileTab('favorites')"></span></button>
  </div>

  <!-- Fill Container -->
  <div data-ng-controller="CurrentUserPostCtrl">
    <div data-ng-controller="CurrentUserAnswerCtrl">
      <div data-ng-controller="CurrentUserFavoriteCtrl">
        <ul class="user-profile-fill-space" data-ng-repeat="post in current_user_posts" ng-show="selectedTab === 'questions'">
          <a href=""><li class="user-profile-row">{{ post.question }}</li></a>
        </ul>

        <ul class="user-profile-fill-space" data-ng-repeat="answer in current_user_answers" ng-show="selectedTab === 'answers'">
          <a href="#"><li class="user-profile-row">{{ answer.body }}</li></a>
        </ul>

        <ul class="user-profile-fill-space" data-ng-repeat="favorite in current_user_favorites" ng-show="selectedTab === 'favorites'">
          <a href="#"><li class="user-profile-row">{{ favorite.question }}</li>
          </a>
        </ul>
      </div>
    </div>
  </div>

</div>